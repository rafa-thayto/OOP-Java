public class CondicionalComposto {
	public static void main(String[] args) {
		
		int idade = 11;
		
		/*
		 * até 11 anos criança 
		 * de  12 anos até 18 Aborrecente
		 * de  19 anos até 60 Adulto*
		 * acima de 60 anos Melhor Idade
		 */
		 
		 if (idade <= 11) {
			 System.out.println("Crianca");
		 } else if (idade >= 12 && idade <= 18) {
			 System.out.println("Adolescente");
		 } else if (idade >= 19 && idade <= 60) {
			 System.out.println("Adulto");
		 } else {
			 System.out.println("Melhor Idade");
		 }
		
		
		/* nota >= 7 Aprovado
		 * nota <  7 Reprovado
		 * porém, se a nota for 6 dá o direito
		 * ao aluno de fazer a recuperação
		 */
		 
		 int nota = 3;
		 if (nota >= 7) {
			 // acertô mizeravi
			 System.out.println("Aprovado");
		 } else {
			 // errrrrroooouuuuu
			 System.out.println("Reprovado");
			 if (nota >= 6) {
				 System.out.println("mas pode fazer a recuperacao");
			 }
		 }
			 
		
	}
}
